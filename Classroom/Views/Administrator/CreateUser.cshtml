@model Classroom.ViewModel.JobsViewModel
@{
    ViewData["Title"] = "Create User";
}

<h1>Create User</h1>
<form asp-action="CreateUser">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input asp-for="Surname" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNr" class="control-label">Phone Number</label>
        <input asp-for="PhoneNr" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Passsword" class="control-label"></label>
        <input asp-for="Passsword" class="form-control" required />
        <span class="field-validation-error text-danger"
              data-valmsg-for="Passsword"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Jobs" class="control-label"></label>
        @Html.DropDownListFor(job => job.JobId, new SelectList(Model.Jobs, "Id", "Name"), "Select a job", new { @class = "form-class" })
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />

</form>
