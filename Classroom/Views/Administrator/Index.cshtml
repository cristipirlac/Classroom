@model Classroom.ViewModel.AdministratorViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
<a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="Create">Create Job</a>
<a class="nav-link text-dark" asp-area="" asp-controller="Administrator" asp-action="CreateUser">Create User</a>
<div class="col-sm-12">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Roles</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <th>@employee.Email</th>
                    <th>
                        <span>
                            @{ var role = await userManager.GetRolesAsync(employee);
                                <a>@role[0]</a>
                            }
                        </span>
                    </th>

                </tr>
            }
        </tbody>
    </table>
</div>
